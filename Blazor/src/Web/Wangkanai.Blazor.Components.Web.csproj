<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <LangVersion>11</LangVersion>
    <Nullable>enable</Nullable>
    <NoWarn>8603,8604,8618,8625</NoWarn>
    <TargetFramework>net7.0</TargetFramework>
    <RootNamespace>Wangkanai.Blazor</RootNamespace>
    <IsPackable>false</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="7.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\Validation\src\Wangkanai.Validation.csproj" />
    <ProjectReference Include="..\Components\Wangkanai.Blazor.Components.csproj" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <Content Remove="wwwroot\**" />
    <Content Include="wwwroot\**" />
  </ItemGroup>

  <ItemGroup>
    <Content Remove="package.json;package-lock.json" />
    <None Include="package.json;package-lock.json">
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <_ContentIncludedByDefault Remove="Components\Table\DivTable.razor" />
  </ItemGroup>

