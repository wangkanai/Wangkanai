<Project Sdk="Microsoft.NET.Sdk.Razor">

    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <Nullable>enable</Nullable>
        <IsPackable>false</IsPackable>
        <NoWarn>8603,8604,8618,8625</NoWarn>
    </PropertyGroup>

    <ItemGroup>
        <SupportedPlatform Include="browser"/>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.Components.Web" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\..\..\Validation\src\Wangkanai.Validation.csproj"/>
        <ProjectReference Include="..\Components\Wangkanai.Blazor.Components.csproj" PrivateAssets="all"/>
    </ItemGroup>

    <ItemGroup>
        <Content Remove="wwwroot\**"/>
        <Content Include="wwwroot\**"/>
    </ItemGroup>

    <ItemGroup>
        <Content Remove="package.json;package-lock.json"/>
        <None Include="package.json;package-lock.json">
            <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
            <CopyToOutputDirectory>Never</CopyToOutputDirectory>
        </None>
    </ItemGroup>

</Project>
