{
    "name": "federation",
    "version": "1.0.0",
    "description": "Wangkanai Web Design Framework",
    "author": "Sarin Na Wangkanai",
    "license": "ISC",
    "private": true,
    "scripts": {
        "clean-lib": "rimraf wwwroot/lib/",
        "lib": "npm-run-all --parallel lib-*",
        "lib-iconic": "cpy node_modules/open-iconic/font/**/*.* wwwroot/lib/open-iconic/font/",
        "lib-bootstrap": "cpy node_modules/bootstrap/dist/**/*.* wwwroot/lib/bootstrap/dist",
        "lib-jquery": "cpy node_modules/jquery/dist/**/*.* wwwroot/lib/jquery/dist",
        "lib-jquery-validation": "cpy node_modules/jquery-validation/dist/**/*.* wwwroot/lib/jquery-validation/dist",
        "lib-jquery-validation-unobtrusive": "cpy node_modules/jquery-validation-unobtrusive/dist/**/*.* wwwroot/lib/jquery-validation-unobtrusive/dist"
    },
    "dependencies": {
        "bootstrap": "^5.3.0",
        "jquery": "^3.6.4",
        "jquery-validation": "^1.19.5",
        "jquery-validation-unobtrusive": "^4.0.0"
    },
    "devDependencies": {
        "cpy-cli": "^4.2.0",
        "npm-run-all": "^4.1.5",
        "rimraf": "^3.0.2"
    }
}
